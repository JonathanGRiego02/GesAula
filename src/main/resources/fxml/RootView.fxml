<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TabPane side="LEFT" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab fx:id="grupoTab" text="Grupo" />
          <Tab fx:id="alumnosTab" text="Alumnos" />
        </tabs>
      </TabPane>
   </center>
   <top>
      <ToolBar BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <items>
            <HBox spacing="5.0">
               <children>
                  <Button fx:id="nuevoButton" mnemonicParsing="false" onAction="#onNuevoAction" text="Nuevo" />
                  <TextField fx:id="ficheronameTextField" />
                  <Button fx:id="guardarButton" defaultButton="true" mnemonicParsing="false" onAction="#onGuardarAction" text="Guardar" />
               </children>
            </HBox>
         </items>
      </ToolBar>
   </top>
   <padding>
      <Insets bottom="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
